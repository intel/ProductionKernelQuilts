+{
+	pr_debug("%s: reg=%x, val=%x\n", __func__, reg, val);
+	if (IS_HDMI_AUDIO_REG(reg)) {
+		REG_WRITE(reg, val);
+		return 0;
+	} else
+		return -EINVAL;
