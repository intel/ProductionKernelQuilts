+static void intel_dma_buf_destroy(struct kref *ref)
+{
+	struct intel_dma_buf *priv =
+		container_of(ref, struct intel_dma_buf, buf_ref);
+	struct intel_dc_buffer *dc_buf = priv->buf;
+	struct intel_adf_mm *mm = priv->mm;
