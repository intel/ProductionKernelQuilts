+#define for_each_cea_db(cea, i, start, end) \
+	 for ((i) = (start); \
+		(i) < (end) && (i) + cea_db_payload_len(&(cea)[(i)]) < (end); \
+		(i) += cea_db_payload_len(&(cea)[(i)]) + 1)
+
+static int cea_db_offsets(const u8 *cea, int *start, int *end)
+{
+	/* Data block offset in CEA extension block */
+	*start = 4;
+	*end = cea[2];
+	if (*end == 0)
+		*end = 127;
+	if (*end < 4 || *end > 127)
+		return -ERANGE;
+	return 0;
+}
