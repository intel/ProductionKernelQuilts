+bool edid_is_valid(struct edid *edid)
+{
+	int i;
+	u8 *raw = (u8 *)edid;
+
+	if (!edid)
+		return false;
+
+	for (i = 0; i <= edid->extensions; i++)
+		if (!edid_block_valid(raw + i * EDID_LENGTH, i))
+			return false;
+
+	return true;
+}
