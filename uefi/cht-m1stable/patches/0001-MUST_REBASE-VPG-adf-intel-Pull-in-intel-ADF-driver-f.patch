+
+	/*init regs*/
+	if (pipe == 0) {
+		sender->dpll_reg = DPLL_CTRL_A;
+		sender->dspcntr_reg = DSPACNTR;
+		sender->pipeconf_reg = PIPEACONF;
+		sender->dsplinoff_reg = DSPALINOFF;
