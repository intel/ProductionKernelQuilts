+static void hdcp_read_an(uint8_t *an)
+{
+	uint8_t i = 0;
+	struct double_word_t temp;
+	temp.value = 0;
+	temp.low = REG_READ(HDCP_AN_LO);
+	temp.high = REG_READ(HDCP_AN_HI);
+	for (i = 0; i < HDCP_AN_SIZE; i++)
