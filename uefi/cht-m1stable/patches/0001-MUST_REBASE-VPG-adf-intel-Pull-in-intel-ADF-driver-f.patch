+			DSI_SEND_PACKAGE);
+	if (err) {
+		pr_err("%s: %d: Exit Sleep Mode\n", __func__, __LINE__);
+		goto power_err;
+	}
+
+	msleep(20);
+	/* Set Display on 0x29 */
+	err = dsi_send_mcs_short_hs(sender, set_display_on, 0, 0,
+			DSI_SEND_PACKAGE);
+	if (err) {
+		pr_err("%s: %d: Set Display On\n", __func__, __LINE__);
+		goto power_err;
+	}
+	msleep(150);
+
