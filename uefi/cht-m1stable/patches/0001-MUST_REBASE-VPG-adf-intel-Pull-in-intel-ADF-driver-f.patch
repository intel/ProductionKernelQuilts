+/**
+ * mid_hdmi_audio_read:
+ * used to get the register value read
+ * from display controller HDMI audio registers.
+ *
+ */
+static int adf_hdmi_audio_read(uint32_t reg, uint32_t *val)
+{
+	pr_debug("%s: reg=%x\n", __func__, reg);
+	if (IS_HDMI_AUDIO_REG(reg)) {
+		*val = REG_READ(reg);
+		return 0;
+	} else
+		return -EINVAL;
