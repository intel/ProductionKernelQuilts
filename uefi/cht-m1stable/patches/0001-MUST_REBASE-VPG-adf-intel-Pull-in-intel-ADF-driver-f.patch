+/**
+ * init dsr structure
+ */
+int dsi_dsr_init(struct dsi_pipe *pipe)
+{
+	struct dsi_dsr *dsr;
+
+	if (!pipe)
+		return -EINVAL;
+
+	dsr = kzalloc(sizeof(*dsr), GFP_KERNEL);
+	if (!dsr)
+		return -ENOMEM;
+
+	/*init reference count*/
+	dsr->ref_count = 0;
+
+	/*init free count*/
+	dsr->free_count = 0;
+
+	/*init dsr enabled*/
+	dsr->dsr_enabled = 0;
+
+	/*set dsr state*/
+	dsr->dsr_state = DSR_INIT;
+
+	/*init dsi config*/
+	dsr->config = &pipe->config;
+
+	pipe->config.dsr = dsr;
