+				0,
+				dc_buf->n_pages << PAGE_SHIFT,
+				GFP_KERNEL);
+	if (err)
+		goto out_err0;
+
+	mutex_unlock(&priv->lock);
+
+	return table;
+out_err0:
+	kfree(table);
+	mutex_unlock(&priv->lock);
+	return ERR_PTR(err);
