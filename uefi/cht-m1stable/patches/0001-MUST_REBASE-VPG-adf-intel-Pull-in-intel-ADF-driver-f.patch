+
+static struct sg_table *intel_map_dma_buf(
+	struct dma_buf_attachment *attachment,
+	enum dma_data_direction direction)
+{
+	struct intel_dma_buf *priv = attachment->dmabuf->priv;
+	struct intel_dc_buffer *dc_buf = priv->buf;
