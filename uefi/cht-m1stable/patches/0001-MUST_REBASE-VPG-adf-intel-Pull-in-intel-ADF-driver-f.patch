+static inline void pkg_sender_queue_pkg(struct dsi_pkg_sender *sender,
+					struct dsi_pkg *pkg,
+					int delay)
+{
+	mutex_lock(&sender->lock);
+
+	if (!delay) {
+		send_pkg(sender, pkg);
+
+		pkg_sender_put_pkg_locked(sender, pkg);
+	} else {
+		/*queue it*/
+		list_add_tail(&pkg->entry, &sender->pkg_list);
+	}
+
+	mutex_unlock(&sender->lock);
