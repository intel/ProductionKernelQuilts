+static int intel_mmap(struct dma_buf *buf, struct vm_area_struct *vma)
+{
+	struct intel_dma_buf *priv = buf->priv;
+
+	if (vma->vm_pgoff != 0)
+		return -EACCES;
+	if (vma->vm_pgoff > (~0UL >> PAGE_SHIFT))
+		return -EACCES;
