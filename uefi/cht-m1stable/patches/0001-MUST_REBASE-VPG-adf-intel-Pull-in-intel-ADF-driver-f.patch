+static int __compute_check_sum(struct avi_info_packet *packet)
+{
+	uint8_t i = 0;
+	uint8_t sum = 0;
+
+	for (i = 0; i < 3; i++)
+		sum += packet->header[i];
+	for (i = 1; i < 28; i++)
+		sum += packet->data[i];
+
+	packet->data[0] = (uint8_t)(0xFF - sum + 1);
+
+	return (int)packet->data[0];
+}
