+				cmd, 0, 0, DSI_SEND_PACKAGE);
+		if (ret)
+			goto err_out;
+	}
+	sender->work_for_slave_panel = false;
+	return 0;
+
+err_out:
+	sender->work_for_slave_panel = false;
+	pr_err("failed to send command %#x\n", cmd);
+	return ret;
+}
