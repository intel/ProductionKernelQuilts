+#ifndef MOFD_HDCP_REG_H_
+#define MOFD_HDCP_REG_H_
+
+#define HDCP_CONVERT_ENDIANNESS(x)	(((x&0x000000ff)<<24)|\
+					((x&0x0000ff00)<<8)|\
+					((x&0x00ff0000)>>8)|\
+					((x&0xff000000)>>24))
+
+struct double_word_t {
+	union {
+		uint64_t value;
+		struct {
+			uint32_t low;
+			uint32_t high;
+		};
+		struct {
+			uint8_t byte[8];
+		};
+	};
+};
+
+struct sqword_t {
+	union {
+		unsigned long long quad_part;
+		struct {
+			unsigned long low_part;
+			unsigned long high_part;
+		} u;
+		struct {
+			uint8_t byte[8];
+		};
+	};
+};
