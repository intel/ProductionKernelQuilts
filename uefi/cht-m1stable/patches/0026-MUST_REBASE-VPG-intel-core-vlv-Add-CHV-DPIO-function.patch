+static inline struct vlv_dc_config *get_vlv_dc_config(
+	struct vlv_pipeline *disp)
+{
+	/* find the first pipeline object */
+	while (disp->disp_no != 0)
+		disp--;
+
+	return container_of(disp, struct vlv_dc_config, pipeline[0]);
+}
